<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Número de pedido -->
        <TextView
            android:id="@+id/text_numero_pedido"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:hint="N.0 de Pedido"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Fecha y precio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/text_fecha_entrega"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/background_dark_variant"
                android:hint="Fecga de entrega"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_precio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorOnFocus"
                android:gravity="end"
                android:hint="Precio"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Botón de detalles -->
        <Button
            android:id="@+id/button_ver_detalles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Ver detalles del pedido"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@color/white"
            android:padding="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
