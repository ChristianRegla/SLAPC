<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="59dp"
        android:background="@drawable/rounded_searchview_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="Precio:"
        android:textColor="@color/background_light" />

    <TextView
        android:id="@+id/tvNombreDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Nombre del Producto"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="208dp"
        android:layout_marginTop="59dp"
        android:background="@drawable/rounded_searchview_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="Categoria:"
        android:textColor="@color/background_light" />

    <TextView
        android:id="@+id/tvPrecioDetail"
        android:layout_width="97dp"
        android:layout_height="60dp"
        android:layout_below="@id/tvNombreDetail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="59dp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:padding="8dp"
        android:text="Precio"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvCategoriaDetail"
        android:layout_width="142dp"
        android:layout_height="58dp"
        android:layout_below="@id/tvNombreDetail"
        android:layout_marginStart="39dp"
        android:layout_marginTop="59dp"
        android:layout_toEndOf="@id/tvPrecioDetail"
        android:background="@drawable/rounded_button_teal"
        android:gravity="center"
        android:padding="8dp"
        android:text="Categoría"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imgProductoDetail"
        android:layout_width="369dp"
        android:layout_height="287dp"
        android:layout_below="@id/tvCategoriaDetail"
        android:layout_marginTop="26dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tvDetallesDetail"
        android:layout_width="387dp"
        android:layout_height="107dp"
        android:layout_below="@id/imgProductoDetail"
        android:layout_marginTop="50dp"
        android:background="@color/background_dark_variant"
        android:text="Detalles técnicos"
        android:textSize="16sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddToCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        app:backgroundTint="@color/teal_700"
        app:srcCompat="@drawable/carrito" />


</RelativeLayout>
