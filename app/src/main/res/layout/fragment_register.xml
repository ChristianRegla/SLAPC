<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_register">

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="28dp"
        android:gravity="center"
        android:layout_above="@id/cardView">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/cropped_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regístrate"
            android:id="@+id/signuptitle"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textSize="32sp"
            android:textColor="@color/white"/>
    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="28dp"
        android:layout_marginBottom="-20dp"
        app:cardBackgroundColor="@color/background_dark"
        android:id="@+id/cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:background="#30FFFFFF"
                android:layout_below="@id/signuptitle"
                android:hint="Usuario"
                android:textColorHint="@color/white"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:drawableLeft="@drawable/ic_username"
                android:drawablePadding="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:background="#30FFFFFF"
                android:layout_below="@id/username"
                android:hint="Correo"
                android:textColorHint="@color/white"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:background="#30FFFFFF"
                android:layout_below="@id/email"
                android:hint="Contraseña"
                android:textColorHint="@color/white"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="20dp"
                android:inputType="textPassword"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                android:background="#30FFFFFF"
                android:layout_below="@id/password"
                android:hint="Dirección de entrega"
                android:textColorHint="@color/white"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:drawableLeft="@drawable/ic_address"
                android:drawablePadding="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/delivery_time"
                android:background="#30FFFFFF"
                android:layout_below="@id/address"
                android:hint="Horario de entrega"
                android:textColorHint="@color/white"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:drawableLeft="@drawable/ic_delivery_hour"
                android:drawablePadding="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/delivery_time"
                android:padding="28dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/registerButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Registrarse"
                    app:cornerRadius="32dp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/text_secondary"/>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>



</RelativeLayout>